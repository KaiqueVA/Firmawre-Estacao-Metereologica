{
  "name": "ESP-IDF v5.5 (compose)",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "idf",
  "workspaceFolder": "/work",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "espressif.esp-idf-extension"
      ]
    }
  },
  "postCreateCommand": "bash -lc 'grep -q export.sh ~/.bashrc || echo \". $IDF_PATH/export.sh\" >> ~/.bashrc'",
  "postStartCommand": "bash -lc '. $IDF_PATH/export.sh || true'"
}